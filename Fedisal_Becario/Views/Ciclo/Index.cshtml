@model IEnumerable<Fedisal_Becario.Models.Ciclo>
@{
    if (Session["ID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Fedisal - [Becarios]</title>
</head>
<body>
    <br />
    <div class="page-header">
        <h1>Ciclos Ingresados</h1>
    </div>
    @if (Model.Count() == 0)
    {
        <div class="alert alert-danger" role="alert">No hay ningún ciclo ingresado!!</div>
    }
    else
    {
    <table class="table table-striped" id="DataTable">
        <thead id="theadNotas">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.anio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nCiclo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.evidenciaNotas)
                </th>
            </tr>
        </thead>
       <tbody>
           @foreach (var item in Model)
           {
           <tr>
               <td>
                   @(item.anio)
               </td>
               <td>
                   @Html.DisplayFor(modelItem => item.nCiclo)
               </td>
               <td>
                   @(item.evidenciaNotas.Equals(false) ? "No Revisado" : "Revisado")
               </td>
           </tr>
           }
       </tbody>
    </table>
    }
</body>
</html>
