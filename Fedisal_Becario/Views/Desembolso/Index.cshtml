@model IEnumerable<Fedisal_Becario.Models.Desembolso>

@{
    if (Session["ID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Fedisal - [Becarios]</title>
</head>
<body>

    <br />
    <div class="page-header">
        <h1 class="text-center">Desembolsos Realizados</h1>
    </div>
    @if (Model.Count() == 0)
    {
        <div class="alert alert-danger" role="alert">No hay ningún registro de desembolsos!!</div>
    }
    else
    {
    <table class="table table-striped" id="DataTableDesembolso">
       <thead id="theadNotas">
           <tr>
               <th>
                   @Html.DisplayNameFor(model => model.fecha)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.monto)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.TipoDesembolso.nombre)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.Ciclo.nCiclo)
               </th>
           </tr>
       </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(item.fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.monto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoDesembolso.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ciclo.nCiclo)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
    <br />
    <div class="panel panel-info">
        <div class="panel-heading text-center"><h3>Gastos Realizados</h3></div>
        <table class="table table-striped">
            <thead id="theadGastos">
                <tr>
                    <th>
                        Libros
                    </th>
                    <th>
                        Colegiatura
                    </th>
                    <th>
                        Manutención
                    </th>
                    <th>
                        Matrícula
                    </th>
                    <th>
                        Otros
                    </th>
                    <th>
                        Trabajo de Graduación
                    </th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td>
                          $  @Html.Action("gastosLibros")
                        </td>
                        <td>
                           $ @Html.Action("gastosColegiatura")
                        </td>
                        <td>
                           $ @Html.Action("gastosManutencion")
                        </td>
                        <td>
                           $ @Html.Action("gastosMatricula")
                        </td>
                        <td>
                           $ @Html.Action("gastosOtros")
                        </td>
                        <td>
                          $ @Html.Action("gastosGraduacion")
                        </td>
                    </tr>
            </tbody>
        </table>
    </div>
    

</body>
</html>
