            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idInformacion)
    
            <div class="form-group">
                @Html.LabelFor(model => model.nombres, htmlAttributes: new { @class = "control-label col-md-2" })
